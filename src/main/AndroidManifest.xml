<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.touch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.LaunchActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.IntroduceActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            ></activity>
        <activity android:name=".view.activity.FrameAcitivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            ></activity>
        <activity android:name=".view.activity.MainAcitivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            ></activity>
    </application>

</manifest>